{
  "compilerOptions": {
    "pretty": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "jslib/*": [
        "jslib/src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "jslib/node_modules",
    "dist",
    "jslib/dist",
    "jslib/spec",
    "jslib/src/electron",
    "jslib/src/angular/components/modal.component.ts",
    "jslib/src/angular/dummy.module.ts",
    "build"
  ]
}
