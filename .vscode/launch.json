{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
            "args": [
                "-r",
                "tsconfig-paths/register",
                "${workspaceFolder}/src/main.ts",
                "sync"
            ],
            "env": {
                "NODE_ENV": "debug"
            },
        }
    ]
}
